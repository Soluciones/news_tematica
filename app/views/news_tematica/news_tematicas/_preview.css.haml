:css
  .wrapper {
  	font-family: "Trebuchet MS", Trebuchet, Arial, Verdana, Sans-serif;
  	max-width: 1024px;
  	margin: 0 auto;
  }
  .header {
  	width: 100%;
  	border-collapse: collapse;
  }
  .header td {
  	vertical-align: bottom;
  	border-bottom: solid 3px #6698D8;
  }
  .header .logo {
  	padding-bottom: 35px;
  }
  .header .titulo_news {
  	padding-bottom: 23px;
  	text-align: right;
  	font-size: 26px;
  }
  .titulo_tematica {
  	text-transform: uppercase;
  	font-weight: normal;
  	font-size: 26px;
  	padding: 30px 12px 0;
  	margin: 0;
  }
  .content {
  	padding: 0 10px;
  }
  .right_column, .left_column {
  	vertical-align: top;
  }
  .left_column {
  	width: 55%;
  }
  .right_column {
  	width: 45%;
  	padding-left: 30px;
  }
  .bloque {
  	padding: 20px 15px;
  	background: #E4E5EB;
  	color: #595252;
  	margin: 30px 0;
  	border-radius: 5px;
  }
  .bloque td {
  	vertical-align: top;
  }
  .bloque .titulo_bloque {
  	text-transform: uppercase;
  	font-weight: normal;
  	color: #6C6C6C;
  	font-size: 27px;
  	margin: 0;
  	padding: 0;
  }
  .bloque .subtitulo_bloque {
  	font-weight: normal;
  	font-size: 13px;
  	color: #878787;
  	margin: 0;
  	padding: 0;
  }
  .bloque .foto {
  	padding-right: 10px;
  }
  .bloque .titulo {
  	color: #0C517E;
  	margin: 0;
  	padding: 0;
  	font-weight: normal;
  }
  .bloque .titulo a {
  	color: inherit;
  	text-decoration: none;
  }
  .bloque .resumen {
  	color: #595252;
  	margin: 0;
  	padding: 0;
  	font-size: 13px;
  }
  .bloque .resumen .leer_mas {
  	color: #d17402;
  	text-decoration: none;
  	position: relative;
  }
  .titular td {
  	padding: 10px 0;
  }
  .titular .foto {
  	width: 160px;
  }
  .titular .foto img {
  	width: 160px;
  	max-width: 100%;
  }
  .titular .titulo {
  	font-size: 19px;
  }
  .mas_leido td, .otro_titular td {
  	padding-top: 5px;
  	padding-bottom: 5px;
  }
  .mas_leido .cuadrado img, .otro_titular .cuadrado img {
  	color: red;
  	font-size: 71px;
  	line-height: 16px;
  	width: 9px;
  }
  .mas_leido .foto, .otro_titular .foto {
  	width: 25%;
  }
  .mas_leido .foto img, .otro_titular .foto img {
  	max-width: 100%;
  }
  .mas_leido .texto, .otro_titular .texto {
  	padding: 5px 0;
  }
  .mas_leido .texto.con_foto, .otro_titular .texto.con_foto {
  	background: none;
  	padding-left: 0;
  }
  .mas_leido .titulo, .otro_titular .titulo {
  	font-weight: bold;
  	font-size: 14px;
  }
  .tema td {
  	padding-top: 10px;
  }
  .tema .titulo {
  	font-size: 13px;
  }
  .tema .nombre_usuario {
  	text-decoration: none;
  	color: #d17402;
  	font-style: italic;
  	font-size: 11px;
  }
  .banner_lateral {
  	width: 100%;
  	text-align: center;
  	padding: 0 0 5px 0;
  }
  .banner_lateral img {
  	max-width: 300px;
  	width: 100%;
  }
  .banner_inferior {
  	width: 100%;
  	text-align: center;
  	padding: 0 0 27px 0;
  }
  .banner_inferior img {
  	max-width: 728px;
  	width: 100%;
  }
  .footer {
  	background: #6698D8;
  	color: #FFF;
  	width: 100%;
  }
  .footer .mas_info {
  	font-weight: normal;
  	text-align: center;
  	font-size: 30px;
  	padding: 10px 0 0;
  }
  .footer .mas_info a {
  	text-decoration: underline;
  	color: #FFF;
  }
  .footer .mail {
  	text-align: right;
  }
  .footer .mail a {
  	color: #FFF;
  	text-decoration: none;
  }
  .footer .mail, .footer .social {
  	vertical-align: top;
  	padding: 27px 35px 16px;
  	font-size: 18px;
  }
  .footer .mail {
  	padding-left: 0;
  }
  .footer .social {
  	padding-right: 0;
  	text-transform: uppercase;
  }
  .footer .social .texto, .footer .social .iconos {
  	display: inline-block;
  	float: left;
  }
  .footer .social .iconos {
  	margin-left: 20px;
  }
  .footer .social .iconos .icono {
  	display: inline-block;
  	width: 30px;
  	height: 30px;
  	font-size: 8px;
  }
  .footer .social .iconos .icono img {
  	max-width: 100%;
  	border-radius: 4px;
  }